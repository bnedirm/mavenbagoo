<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fortw.bagoo.SecondSceneController">
    <children>
      <BorderPane prefHeight="480.0" prefWidth="640.0">
         <top>
              <Label fx:id="label" minHeight="16" minWidth="69" text="Found luggage" BorderPane.alignment="CENTER" />
         </top>
         <left>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="changeItemButton" mnemonicParsing="false" prefHeight="29.0" prefWidth="100.0" text="change item" />
                  <Button fx:id="deleteItemButton" mnemonicParsing="false" prefHeight="29.0" prefWidth="106.0" text="delete item" />
                    <Button fx:id="button" onAction="#handleButtonAction" prefHeight="29.0" prefWidth="101.0" text="Click Me!">
                     <VBox.margin>
                        <Insets bottom="40.0" />
                     </VBox.margin></Button>
                  <TextField fx:id="fieldRegistrationNr" promptText="reg nr" />
                  <TextField fx:id="fieldDateFound" promptText="date found" />
                  <TextField fx:id="fieldTimeFound" promptText="time found" />
                  <TextField fx:id="fieldLuggageType" promptText="luggagetype" />
                  <TextField fx:id="fieldBrand" promptText="brand" />
                  <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#handleButtonAddItem" prefHeight="29.0" prefWidth="100.0" text="add item" />
               </children>
            </VBox>
         </left>
         <center>
            <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView fx:id="foundLuggageTableView" editable="true" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="registrationNr" editable="false" prefWidth="75.0" text="reg nr." />
                      <TableColumn fx:id="dateFound" editable="false" prefWidth="75.0" text="date found" />
                        <TableColumn fx:id="timeFound" editable="false" prefWidth="75.0" text="time found" />
                        <TableColumn fx:id="luggageType" editable="false" prefWidth="75.0" text="luggage type" />
                        <TableColumn fx:id="brand" editable="false" prefWidth="75.0" text="brand" />
                    </columns>
                  </TableView>
               </children>
            </StackPane>
         </center>
         <bottom>
            <Label text="status message" BorderPane.alignment="CENTER_LEFT">
               <BorderPane.margin>
                  <Insets left="5.0" />
               </BorderPane.margin></Label>
         </bottom>
      </BorderPane>
    </children>
</AnchorPane>
